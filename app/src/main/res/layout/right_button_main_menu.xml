<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/right_loyout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_open_menu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="EventOpenRenderMenu"
            android:scaleType="centerCrop"
            android:src="@drawable/button_menu" />

        <ImageButton
            android:id="@+id/button_base_line"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="OnCreateLine"
            android:scaleType="centerCrop"
            android:src="@drawable/blue_sq_arr_solid" />

        <ImageButton
            android:id="@+id/button_dotted_line"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="OnCreateDottedLine"
            android:scaleType="centerCrop"
            android:src="@drawable/blue_sq_arr_doted" />

        <ImageButton
            android:id="@+id/button_pencil"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="OnCreatePencil"
            android:scaleType="centerCrop"
            android:src="@drawable/blue_sq_marker" />

        <ImageButton
            android:id="@+id/button_create_text"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="OnCreateText"
            android:scaleType="centerCrop"
            android:src="@drawable/blue_sq_text_block" />

        <ImageButton
            android:id="@+id/button_clear_all"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:onClick="OnCreateEraser"
            android:scaleType="centerCrop"
            android:src="@drawable/blue_sq_eraser" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>