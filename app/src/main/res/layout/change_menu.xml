<?xml version ="1.0" encoding ="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChangeMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#779EBD">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/NameProject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890."
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textFilter"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton23"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/blue_sq_blue_team" />

                    <ImageButton
                        android:id="@+id/imageButton22"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/blue_sq_white_team"
                        android:tint="#BF404040" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Defence"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton24"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/blue_sq_white_team" />

                    <ImageButton
                        android:id="@+id/imageButton25"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/blue_sq_blue_team"
                        android:tint="#BF404040" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="-184dp"
            tools:layout_editor_absoluteY="333dp">

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#31848C"
                android:fontFamily="sans-serif-condensed-light"
                android:text="6*6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#31848C"
                android:fontFamily="sans-serif-condensed-light"
                android:text="6*6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#31848C"
                android:fontFamily="sans-serif-condensed-light"
                android:text="6*6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#31848C"
                android:fontFamily="sans-serif-condensed-light"
                android:text="6*6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button7"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#31848C"
                android:fontFamily="sans-serif-condensed-light"
                android:text="6*6"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="#D5D4D4"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/TextCountEnemyPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <SeekBar
                    android:id="@+id/ChangeEnemyCount"
                    style="@style/Widget.AppCompat.SeekBar"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:max="6"
                    android:progress="6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="#2196F3"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/TextCountMainPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <SeekBar
                    android:id="@+id/ChangeMainCount"
                    style="@style/Widget.AppCompat.SeekBar"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="6"
                    android:progress="6" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_full_field"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:onClick="setFullField"
                android:scaleType="fitCenter"
                android:src="@drawable/blue_sq_full_field" />

            <ImageButton
                android:id="@+id/button_half_field"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:onClick="setHalfField"
                android:scaleType="fitCenter"
                android:src="@drawable/blue_sq_half_field" />

            <ImageButton
                android:id="@+id/button_three_field"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:onClick="setThreeField"
                android:scaleType="fitCenter"
                android:src="@drawable/blue_btn_3x3" />

            <ImageButton
                android:id="@+id/button_four_field"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:onClick="setFourField"
                android:scaleType="fitCenter"
                android:src="@drawable/blue_btn_4x2" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Next"
        android:text="Next"
        android:theme="@style/Theme.AppForTrainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

</androidx.constraintlayout.widget.ConstraintLayout>